@using TMS.Models.Cashed
@model ConstantsPlanState

<div class="form-group">
    @Html.LabelFor(x => x, new Dictionary<string, object>() {{"class", "col-md-2 control-label"}})
    <div class="col-md-10">
        @Html.DropDownListFor(x => x.ID, 
            CachedConstants.PlanStates.Select(item => new SelectListItem()
            {
                Value = item.ID,
                Text = item.Name,
                Selected = Model != null && (!string.IsNullOrEmpty(Model.ID) && item.ID == Model.ID)
            }), 
            null, 
            new Dictionary<string, object>(){{"class", "form-control"}, {"id", "PlanStateSel"}})
    </div>
</div>